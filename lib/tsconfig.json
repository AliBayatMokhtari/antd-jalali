{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": "../lib",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": false,
    "jsx": "react",
    "outDir": "../src/dist"
  },
  "include": ["./**/*"]
}
