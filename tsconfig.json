{
  "compilerOptions": {
    "target": "es5",
    "module": "ES2020",
    "baseUrl": "./lib",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": false,
    "jsx": "react",
    "outDir": "dist/esm"
  },
  "include": ["./lib/**/*"]
}
